<?xml version="1.0" encoding="UTF-8"?>
<Container>
  <TemplateURL>https://raw.githubusercontent.com/binhex/docker-templates/master/binhex/crafty.xml</TemplateURL>
  <Name>binhex-crafty</Name>
  <Overview>
    Crafty is a Minecraft Server Wrapper / Controller / Launcher. The purpose of Crafty is to launch a Minecraft server in the background and present a web interface for the admin to use to interact with their server.
  </Overview>
  <Support>https://forums.unraid.net/topic/108893-support-binhex-crafty/</Support>
  <Registry>https://registry.hub.docker.com/r/binhex/arch-crafty/</Registry>
  <GitHub>https://github.com/binhex/arch-crafty</GitHub>
  <Repository>binhex/arch-crafty</Repository>
  <Project>https://craftycontrol.com/</Project>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8000</HostPort>
        <ContainerPort>8000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>25565-25575</HostPort>
        <ContainerPort>25565-25575</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>UMASK</Name>
      <Value>000</Value>
    </Variable>
    <Variable>
      <Name>PUID</Name>
      <Value>99</Value>
    </Variable>
    <Variable>
      <Name>PGID</Name>
      <Value>100</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>https://[IP]:[PORT:8000]/</WebUI>
  <Icon>https://raw.githubusercontent.com/binhex/docker-templates/master/binhex/images/crafty-icon.png</Icon>
  <DonateText>If you appreciate my work, then please consider buying me a beer :D</DonateText>
  <DonateLink>https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&amp;hosted_button_id=MM5E27UX6AUU4</DonateLink>
  <DonateImg>https://www.paypal.com/en_US/i/btn/btn_donate_SM.gif</DonateImg>
  <Description>Crafty is a Minecraft Server Wrapper / Controller / Launcher. The purpose of Crafty is to launch a Minecraft server in the background and present a web interface for the admin to use to interact with their server.</Description>
  <templatePath>/tmp/GitHub/AppFeed/templates/BinhexsRepository/binhex/crafty.xml</templatePath>
</Container>
